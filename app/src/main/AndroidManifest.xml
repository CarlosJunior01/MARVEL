<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carlos.marvel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.about.VideoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".presentation.about.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.details.DetalhesActivity"
            android:parentActivityName=".presentation.marvel.MarvelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.intros.SlideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.marvel.MarvelActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.intros.IntroLoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER"
                    android:screenOrientation="portrait" />
            </intent-filter>
        </activity>
    </application>

</manifest>